{
  "1": {
    "name": "Heeft geldige stadspas",
    "rules": [
      {
        "type": "rule",
        "rule": "$.FOCUS_AANVRAGEN.*[@.productTitle is 'Stadspas' and len(@.steps.*[@.decision is 'toekenning' and (now() - timeDelta(1, 0, 0, 0, 0, 0)) <= dateTime(@.datePublished)]) >= 1]"
      }
    ],
    "reason": "Heeft een geldige stadspas"
  },
  "2": {
    "name": "Is 18 of ouder",
    "rules": [
      {
        "type": "rule",
        "rule": "now().year - dateTime($.BRP.persoon.geboortedatum).year >= 18"
      }
    ]
  },
  "3": {
    "name": "Woont in gemeente Amsterdam",
    "rules": [
      {
        "type": "rule",
        "rule": "$.BRP.persoon.mokum is true"
      }
    ]
  },
  "4": {
    "name": "Heeft kinderen",
    "rules": [
      {
        "type": "rule",
        "rule": "len($.BRP.kinderen) >= 1"
      }
    ]
  },
  "5": {
    "name": "Kind is tussen 2 en 18 jaar",
    "rules": [
      {
        "type": "rule",
        "rule": "len($.BRP.kinderen[now().year - dateTime(@.geboortedatum).year >= 2 and now().year - dateTime(@.geboortedatum).year <= 18]) >= 1"
      }
    ]
  },
  "6": {
    "name": "Persoon is 66 of ouder",
    "rules": [
      {
        "type": "rule",
        "rule": "now().year - dateTime($.BRP.persoon.geboortedatum).year >= 66"
      }
    ]
  },
  "7": {
    "name": "Persoon is 21 of ouder",
    "rules": [
      {
        "type": "rule",
        "rule": "now().year - dateTime($.BRP.persoon.geboortedatum).year >= 21"
      }
    ]
  },
  "8": {
    "name": "Kind is 10,11 of 12",
    "rules": [
      {
        "type": "rule",
        "rule": "len($.BRP.kinderen.*[now().year - dateTime(@.geboortedatum).year >= 10 and now().year - dateTime(@.geboortedatum).year <= 12]) >= 1"
      }
    ]
  }
}